    {
      "path": "dist/core.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1"
